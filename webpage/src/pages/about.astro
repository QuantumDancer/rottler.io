---
import BaseLayout from "../layouts/BaseLayout.astro"

const resources: { label: string; href: string }[] = [
    { label: "Astro", href: "https://astro.build/" },
    { label: "Astro Icon", href: "https://www.astroicon.dev/" },
    { label: "Tailwind CSS", href: "https://tailwindcss.com/" },
    { label: "daisyUI", href: "https://daisyui.com/" },
    { label: "Phosphor Icons", href: "https://phosphoricons.com/" },
]
---

<BaseLayout>
    <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8">
        <h2 class="text-4xl font-bold pb-4">This webpage is built with</h2>
        <ul class="text-xl list-disc list-inside">
            {
                resources.map(({ label, href }) => (
                    <li>
                        <a class="link link-hover" href={href}>
                            {label}
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>
</BaseLayout>
